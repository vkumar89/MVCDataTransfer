
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index2</title>
</head>
<body>
    <div>

        <table border="1" align="center" width="15%">
            <caption>Product Details</caption>
            <tr>
                <td>Id</td>
                <td>@ViewBag.Id</td>
            </tr>
            <tr>
                <td>Name</td>
                <td>@ViewBag.Name</td>
            </tr>
            <tr>
                <td>Price</td>
                <td>
                    @{
                        double? price = ViewBag.Price;
                        price = price + (price * 10 / 100);
                        <text>@price
                        </text>
                    }
                </td>
            </tr>

        </table>

    </div>
</body>
</html>
